{
  "name": "spiral/app-cli",
  "description": "Spiral Skeleton Console Application",
  "license": "MIT",
  "authors": [
    {
      "name": "Wolfy-J",
      "email": "wolfy.jd@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.1",
    "spiral/framework": "^2.0",
    "spiral/logger": "^1.1",
    "spiral/debug": "^1.3",
    "spiral/console": "^1.2",
    "spiral/dotenv-bridge": "^1.0"
  },
  "scripts": {
    "post-create-project-cmd": [
      "php -r \"copy('.env.sample', '.env');\"",
      "php app.php encrypt:key -m .env",
      "php app.php configure -vv"
    ]
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/src/"
    }
  }
}